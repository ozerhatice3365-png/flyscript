ir end  UserInputService.InputBegan:Connect(function()     updateMoveDirection() end)  UserInputService.InputEnded:Connect(function()     updateMoveDirection() end)  -- Fly mantığı RunService.RenderStepped:Connect(function(deltaTime)     if isFlying and humanoidRootPart then         if moveDirection.Magnitude > 0 then             local cam = workspace.CurrentCamera             local camCF = cam.CFrame             local moveWorld =                 (camCF.RightVector * moveDirection.X) +                 (camCF.UpVector * moveDirection.Y) +                 (camCF.LookVector *      end
